<body>
    <div class="grid-overlay"></div>
    <div class="scanline"></div>
    
    <div class="app-container">
        <div class="top-bar">
            <div class="brand">
                <div class="brand-icon"></div>
                <div class="brand-text">FX Terminal</div>
            </div>
            <div class="system-status">
                <div class="status-item">
                    <div class="status-dot"></div>
                    <span>System Active</span>
                </div>
                <div class="status-item">
                    <span id="timeDisplay"></span>
                </div>
            </div>
        </div>

        <div class="main-grid">
            <div class="panel">
                <div class="panel-header">
                    <div class="panel-title">Position Builder</div>
                    <div class="panel-subtitle">Click pairs to toggle direction â¢ Only scored pairs execute</div>
                </div>

                <div class="stats-bar">
                    <div class="stat">
                        <div class="stat-label">Long</div>
                        <div class="stat-value" id="longCount">0</div>
                    </div>
                    <div class="stat">
                        <div class="stat-label">Short</div>
                        <div class="stat-value" id="shortCount">0</div>
                    </div>
                    <div class="stat">
                        <div class="stat-label">Active</div>
                        <div class="stat-value" id="totalCount">0</div>
                    </div>
                </div>

                <div class="content-area">
                    <div class="ticker-grid" id="tickerGrid"></div>
                </div>

                <div class="action-bar">
                    <button class="btn btn-clear" id="clearBtn">Clear</button>
                    <button class="btn btn-execute" id="executeBtn">Execute Strategy</button>
                </div>
            </div>

            <div class="output-panel">
                <div class="output-header">
                    <div class="panel-title">Trade Recommendations</div>
                    <div class="panel-subtitle">Actionable positions based on strategy execution</div>
                </div>

                <div class="output-content" id="outputContent">
                    <div class="empty-state">
                        <div class="empty-icon">â</div>
                        <div class="empty-title">Ready</div>
                        <div class="empty-desc">Configure positions and execute to generate recommendations</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const WEBHOOK_URL = "http://localhost:5678/webhook-test/pair-import";

        const TICKERS = [
            "EURUSD", "GBPUSD", "USDJPY", "AUDUSD", "NZDUSD",
            "USDCAD", "USDCHF", "EURJPY", "GBPJPY", "AUDJPY",
            "EURAUD", "EURGBP", "GBPCAD", "CADJPY", "CHFJPY",
            "EURCHF", "NZDJPY", "AUDCAD", "AUDNZD", "XAUUSD"
        ];

        const state = {};

        function initState() {
            TICKERS.forEach(ticker => {
                state[ticker] = { direction: null, score: 0 };
            });
        }

        function updateTime() {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('en-US', { 
                hour12: false, 
                hour: '2-digit', 
                minute: '2-digit',
                second: '2-digit'
            });
            document.getElementById('timeDisplay').textContent = timeStr;
        }

        function updateStats() {
            let longCount = 0, shortCount = 0;
            
            Object.values(state).forEach(data => {
                if (data.direction === 'long' && data.score > 0) longCount++;
                if (data.direction === 'short' && data.score > 0) shortCount++;
            });
            
            document.getElementById('longCount').textContent = longCount;
            document.getElementById('shortCount').textContent = shortCount;
            document.getElementById('totalCount').textContent = longCount + shortCount;
        }

        function createTickerItem(ticker) {
            const item = document.createElement('div');
            item.className = 'ticker-item';
            item.dataset.ticker = ticker;

            item.innerHTML = `
                <div class="ticker-header">
                    <div class="ticker-symbol">${ticker}</div>
                    <div class="ticker-status">LONG</div>
                </div>
                <div class="score-wrapper">
                    <div class="score-label">Conviction</div>
                    <input type="number" class="score-input" placeholder="0-100" min="0" max="100" step="1">
                </div>
            `;

            const input = item.querySelector('.score-input');
            const status = item.querySelector('.ticker-status');

            item.addEventListener('click', (e) => {
                if (input.contains(e.target)) return;
                toggleDirection(ticker, item, status);
            });

            input.addEventListener('input', (e) => {
                let val = parseInt(e.target.value) || 0;
                val = Math.max(0, Math.min(100, val));
                if (e.target.value !== '') e.target.value = val;
                state[ticker].score = val;
                updateStats();
            });

            input.addEventListener('click', (e) => e.stopPropagation());

            return item;
        }

        function toggleDirection(ticker, item, status) {
            const current = state[ticker].direction;
            
            if (current === null) {
                state[ticker].direction = 'long';
                item.className = 'ticker-item active-long';
                status.textContent = 'LONG';
            } else if (current === 'long') {
                state[ticker].direction = 'short';
                item.className = 'ticker-item active-short';
                status.textContent = 'SHORT';
            } else {
                state[ticker].direction = null;
                item.className = 'ticker-item';
                status.textContent = '';
            }
            
            updateStats();
        }

        function clearAll() {
            initState();
            document.querySelectorAll('.ticker-item').forEach(item => {
                item.className = 'ticker-item';
                item.querySelector('.ticker-status').textContent = '';
                item.querySelector('.score-input').value = '';
            });
            updateStats();
        }

        function buildPayload() {
            const pairs = [];
            for (const [ticker, data] of Object.entries(state)) {
                if (data.direction !== null && data.score > 0) {
                    pairs.push({
                        pair: ticker,
                        direction: data.direction,
                        score: data.score
                    });
                }
            }
            return { pairs };
        }

        async function executeStrategy() {
            const payload = buildPayload();
            
            if (payload.pairs.length === 0) {
                showEmptyState('Configure at least one position with direction and score');
                return;
            }

            const outputContent = document.getElementById('outputContent');
            
            outputContent.innerHTML = `
                <div class="empty-state">
                    <div class="empty-icon">â</div>
                    <div class="empty-title">Analyzing</div>
                    <div class="empty-desc">Running strategy execution</div>
                </div>
            `;

            try {
                const response = await fetch(WEBHOOK_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}`);
                }

                let data = await response.json();
                
                // Handle if response is wrapped in an array
                if (Array.isArray(data) && data.length > 0) {
                    data = data[0];
                }
                
                displayResults(data);
                
            } catch (error) {
                outputContent.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">â</div>
                        <div class="empty-title">Error</div>
                        <div class="empty-desc">${error.message}</div>
                    </div>
                `;
            }
        }

        function showEmptyState(message) {
            document.getElementById('outputContent').innerHTML = `
                <div class="empty-state">
                    <div class="empty-icon">â </div>
                    <div class="empty-title">Not Ready</div>
                    <div class="empty-desc">${message}</div>
                </div>
            `;
        }

        function displayResults(data) {
            const outputContent = document.getElementById('outputContent');
            
            if (!data.results || !Array.isArray(data.results)) {
                outputContent.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">â</div>
                        <div class="empty-title">No Data</div>
                        <div class="empty-desc">Invalid response from server</div>
                    </div>
                `;
                return;
            }

            // Filter: only show where takeTrade is true AND finalDirection is "long" or "short"
            const tradable = data.results.filter(item => 
                item.takeTrade === true && 
                (item.finalDirection === 'long' || item.finalDirection === 'short')
            );

            if (tradable.length === 0) {
                outputContent.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">â</div>
                        <div class="empty-title">No Trades</div>
                        <div class="empty-desc">Strategy returned no actionable positions</div>
                    </div>
                `;
                return;
            }

            let html = `
                <table class="output-table">
                    <thead>
                        <tr>
                            <th>Pair</th>
                            <th>Direction</th>
                            <th>Score</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            tradable.forEach(item => {
                const directionClass = item.finalDirection === 'long' ? 'buy' : 'sell';
                const directionText = item.finalDirection === 'long' ? 'LONG' : 'SHORT';

                html += `
                    <tr>
                        <td class="output-pair">${item.pair}</td>
                        <td><span class="output-direction ${directionClass}">${directionText}</span></td>
                        <td class="output-score">${item.aggregateScore}</td>
                    </tr>
                `;
            });

            html += `</tbody></table>`;
            outputContent.innerHTML = html;
        }

        function init() {
            initState();
            
            const grid = document.getElementById('tickerGrid');
            TICKERS.forEach(ticker => {
                grid.appendChild(createTickerItem(ticker));
            });

            document.getElementById('clearBtn').addEventListener('click', clearAll);
            document.getElementById('executeBtn').addEventListener('click', executeStrategy);
            
            updateStats();
            updateTime();
            setInterval(updateTime, 1000);
        }

        init();
    </script>
</body>
</html>